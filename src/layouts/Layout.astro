---
import Analytics from "@vercel/analytics/astro";
import CookieBanner from "../components/cookie-banner.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/webp" href="/favicon.webp" />
    <meta name="generator" content={Astro.generator} />

    <!-- Preload critical fonts -->
    <link
      rel="preload"
      href="/fonts/FrederickatheGreat.woff"
      as="font"
      type="font/woff"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/Cutive.woff"
      as="font"
      type="font/woff"
      crossorigin="anonymous"
    />

    <title>
      Planes con Amor - Libro de Recuerdos Interactivo | Crea Momentos
      Inolvidables
    </title>
    <meta
      name="description"
      content="Libro interactivo personalizado con ideas únicas para crear recuerdos inolvidables. Experiencias planificadas para conectar con tu pareja, familia e hijos. ¡Únete a la lista de espera!"
    />
    <meta
      name="keywords"
      content="libro de recuerdos, experiencias en pareja, planes románticos, actividades familiares, libro personalizado, ideas de citas, regalos únicos"
    />
    <meta name="author" content="Planes con Amor" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://planes-con-amor.vercel.app" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://planes-con-amor.vercel.app" />
    <meta
      property="og:title"
      content="Planes con Amor - Libro de Recuerdos Interactivo"
    />
    <meta
      property="og:description"
      content="Libro interactivo personalizado con ideas únicas para crear recuerdos inolvidables con tu pareja y familia."
    />
    <meta
      property="og:image"
      content="https://planes-con-amor.vercel.app/og-image.jpg"
    />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="Planes con Amor" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://planes-con-amor.vercel.app" />
    <meta
      name="twitter:title"
      content="Planes con Amor - Libro de Recuerdos Interactivo"
    />
    <meta
      name="twitter:description"
      content="Libro interactivo personalizado con ideas únicas para crear recuerdos inolvidables."
    />
    <meta
      name="twitter:image"
      content="https://planes-con-amor.vercel.app/og-image.jpg"
    />

    <!-- Additional SEO -->
    <meta name="theme-color" content="#F59E0B" />
    <meta name="msapplication-TileColor" content="#F59E0B" />

    <!-- JSON-LD Structured Data -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Product",
        name: "Planes con Amor - Libro de Recuerdos Interactivo",
        description:
          "Libro interactivo personalizado con ideas únicas para crear recuerdos inolvidables con tu pareja, familia e hijos.",
        brand: {
          "@type": "Brand",
          name: "Planes con Amor",
        },
        offers: {
          "@type": "Offer",
          availability: "https://schema.org/PreOrder",
          priceValidUntil: "2025-12-31",
        },
        aggregateRating: {
          "@type": "AggregateRating",
          ratingValue: "4.8",
          reviewCount: "500",
        },
      })}
    />

    <!-- DataFast Analytics: Solo carga si el usuario aceptó cookies -->
    <script is:inline>
      const consent = localStorage?.getItem("cookie-consent");
      if (consent === "accepted") {
        const script = document.createElement("script");
        script.defer = true;
        script.setAttribute("data-website-id", "dfid_EqWUIlwq5ZQi7Qp2q1DeA");
        script.setAttribute("data-domain", "planes-con-amor.vercel.app");
        script.src = "https://datafa.st/js/script.js";
        document.head.appendChild(script);
      }
    </script>
  </head>

  <body>
    <Analytics />
    <slot />
    <CookieBanner />
  </body>

  <style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
    }
  </style>
</html>
