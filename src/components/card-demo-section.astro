---
import { Clock, Calendar, CheckCircle2 } from "@lucide/astro";

// TODO: Añadir imágenes en src/assets/images/ con los siguientes nombres:
// - starry-dinner.png (Cena bajo las estrellas - picnic con carpa y cielo estrellado)
// - nature-adventure.png (Aventura en naturaleza - sendero natural)
// - family-games.png (Juegos en familia - juegos de mesa)
// import starryDinner from "../assets/images/starry-dinner.png";
// import natureAdventure from "../assets/images/nature-adventure.png";
// import familyGames from "../assets/images/family-games.png";

const cardExamples = [
  {
    title: "Cena bajo las estrellas",
    description:
      "Prepara una cena especial al aire libre y disfruten de una noche memorable",
    status: "pending",
    statusLabel: "Pendiente",
    icon: Clock,
    color: "bg-slate-100 text-slate-700 border-slate-300",
    // image: starryDinner,
    imageAlt: "Picnic bajo las estrellas con carpa iluminada",
  },
  {
    title: "Día de aventura en la naturaleza",
    description:
      "Exploren un sendero nuevo y descubran juntos la belleza del entorno natural",
    status: "scheduled",
    statusLabel: "Agendada",
    date: "15 de Marzo",
    icon: Calendar,
    color: "bg-amber-100 text-amber-700 border-amber-300",
    // image: natureAdventure,
    imageAlt: "Sendero natural en el bosque",
  },
  {
    title: "Tarde de juegos en familia",
    description:
      "Desconéctense de la tecnología y disfruten de juegos de mesa juntos",
    status: "completed",
    statusLabel: "Realizada",
    icon: CheckCircle2,
    color: "bg-emerald-100 text-emerald-700 border-emerald-300",
    // image: familyGames,
    imageAlt: "Juegos de mesa familiares",
  },
];
---

<section class="bg-white px-4 py-24">
  <div class="mx-auto max-w-6xl">
    <div class="mx-auto mb-16 max-w-3xl text-center">
      <h2
        class="font-fredericka mb-6 text-4xl font-bold text-balance md:text-5xl"
      >
        Cada idea es un{" "}
        <span
          class="bg-linear-to-r from-amber-600 to-rose-600 bg-clip-text text-transparent"
          >reto especial</span
        >
      </h2>
      <p class="font-cutive text-xl text-pretty text-gray-600">
        Organiza y sigue el progreso de cada experiencia. Añade notas y fotos
        para documentar tus recuerdos
      </p>
    </div>

    <div class="grid gap-6 md:grid-cols-3">
      {
        cardExamples.map((card) => (
          <div class="group rounded-lg border-2 border-gray-200 bg-white p-6 transition-all duration-300 hover:-translate-y-1 hover:shadow-xl">
            <div class="space-y-4">
              <div class="flex items-start justify-between gap-2">
                <h3 class="font-fredericka text-lg leading-tight font-bold">
                  {card.title}
                </h3>
                <span
                  class={`inline-flex shrink-0 items-center gap-1 rounded-full border px-2.5 py-0.5 text-xs font-semibold ${card.color}`}
                >
                  <card.icon class="h-3 w-3" />
                  {card.statusLabel}
                </span>
              </div>

              {/* Imagen ilustrativa de la idea */}
              <div class="overflow-hidden rounded-lg">
                {/* TODO: Descomentar cuando las imágenes estén disponibles */}
                {/* <img
                  src={card.image.src}
                  alt={card.imageAlt}
                  class="h-48 w-full object-cover"
                /> */}
                {/* Placeholder temporal mientras se agregan las imágenes */}
                <div class="flex h-48 w-full items-center justify-center rounded-lg bg-linear-to-br from-amber-100 to-rose-100">
                  <span class="font-cutive text-center text-sm text-gray-500">
                    {card.imageAlt}
                  </span>
                </div>
              </div>

              <p class="font-cutive text-sm leading-relaxed text-gray-600">
                {card.description}
              </p>

              {card.date && (
                <div class="border-t pt-2">
                  <p class="font-cutive text-sm font-medium text-amber-700">
                    Fecha: {card.date}
                  </p>
                </div>
              )}

              <div class="space-y-2 pt-4">
                <div class="flex h-20 items-center justify-center rounded-lg border-2 border-dashed border-gray-300 bg-linear-to-br from-amber-50 to-rose-50">
                  <span class="font-cutive text-xs text-gray-500">
                    Añadir foto del recuerdo
                  </span>
                </div>
                <div class="flex h-16 items-center rounded-lg border border-gray-300 bg-gray-100/30 px-3">
                  <span class="font-cutive text-xs text-gray-500">
                    Añadir una nota personal...
                  </span>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
